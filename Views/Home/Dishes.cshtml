<h2><a href="/">Chefs</a>  | Dishes</h2>
<a href="dishes/new">Add a Dish</a>
<h3>Yum, take a look at our tasty dishes!</h3>
@using ChefsDishes.Models;
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Dish ID</th>
            <th scope="col">Dish Name</th>
            <th scope="col">Chef</th>
            <th scope="col">Tastiness</th>
            <th scope="col">Calories</th>

        </tr>
    </thead>
@model List<Dish>
    @{
        foreach(var dish in @Model)
        {
            
            <tr>
                <th scope="row">@dish.ID</th>
                <td>@dish.Name</td>
                <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>

            </tr>
        }
    }
